<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.eclipse.org/gemini/blueprint/schema/blueprint
       http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/*.xml"/>

    <context:annotation-config/>
    <context:component-scan base-package="org.motechproject.server.startup"/>

    <bean id="startupManager" class="org.motechproject.server.startup.StartupManager" factory-method="getInstance"/>

    <bean id="settingsDbConnector" factory-bean="couchDbManager" factory-method="getConnector">
        <constructor-arg value="motech-platform-startup"/>
    </bean>

    <bean id="moduleRegistrationData" class="org.motechproject.osgi.web.ModuleRegistrationData">
        <constructor-arg name="moduleName" value="server-bundle"/>
        <constructor-arg name="i18n">
            <map>
                <entry key="messages" value="../server/resources/messages/"/>
            </map>
        </constructor-arg>
    </bean>

    <osgi:service id="uiFrameworkServiceOsgi" auto-export="interfaces" ref="uiFrameworkService"
                  interface="org.motechproject.osgi.web.UIFrameworkService"/>

    <osgi:reference id="couchDbManager" interface="org.motechproject.commons.couchdb.service.CouchDbManager"/>

    <osgi:reference id="eventRelayOsgi"
                    interface="org.motechproject.event.listener.EventRelay"/>

    <osgi:reference id="configLoader" interface="org.motechproject.server.config.service.ConfigLoader"/>

    <osgi:reference id="platformSettingsService" interface="org.motechproject.server.config.service.PlatformSettingsService"/>

    <osgi:reference id="userService" interface="org.motechproject.security.service.MotechUserService"/>

    <osgi:reference id="roleService" interface="org.motechproject.security.service.MotechRoleService"/>

    <osgi:reference id="eventAdmin" interface="org.osgi.service.event.EventAdmin"/>

    <osgi:reference id="configurationService" interface="org.motechproject.config.service.ConfigurationService"/>
</beans>
