	<artifactId>motech-platform-batch</artifactId>
	<groupId>org.motechproject</groupId>
	<version>0.24-SNAPSHOT</version>
	<name>MOTECH batch</name>
	<description>MOTECH batch</description>
	<packaging>bundle</packaging>

	<properties>
		<modules.root.dir>${basedir}/../../..</modules.root.dir>
		<spring.batch.version>3.0.0.M3</spring.batch.version>
		<quartz.version>2.0.0</quartz.version>
	</properties>

	<build>
		<finalName>motech-platform-batch</finalName>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Blueprint-Enabled>true</Blueprint-Enabled>
						<Context-Path>batch</Context-Path>
						<Resource-Path>batch/resources</Resource-Path>
						<Export-Package>
							org.motechproject.batch;version=${project.version},
						</Export-Package>
						<Import-Package>
							javax.batch.operations,
							javax.batch.runtime,
							javax.persistence,
							javax.servlet.http,
							javax.xml.bind.annotation,
							org.hibernate,
							org.hibernate.criterion,
							org.hibernate.classic,
							org.motechproject.osgi.web,
							org.springframework.scheduling.quartz,
							org.quartz,
							org.springframework.web.multipart,
							org.springframework.transaction.annotation,
							org.springframework.http,
							org.springframework.stereotype,
							org.springframework.web.bind.annotation,
							javax.annotation,
							org.apache.commons.io,
							org.joda.time,
							<!--org.motechproject.commons.date.util, org.motechproject.event.metrics, -->
							org.slf4j,
							org.springframework.beans.factory.annotation

						</Import-Package>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-bundles</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${user.home}/.motech/bundles</outputDirectory>
							<resources>
								<resource>
									<directory>target</directory>
									<includes>
										<include>*.jar</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<webXml>${project.basedir}/src/main/webapp/WEB-INF/web.xml</webXml>
					<webappDirectory>D:\Servers\apache-tomcat-7.0.52-motech-platform-batch\webapps\motech-platform-batch</webappDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<verbose>true</verbose>
					<fork>true</fork>
					<executable></executable>
					<compilerVersion>1.6</compilerVersion>
				</configuration>
			</plugin>
		</plugins>
	</build>

