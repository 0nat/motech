<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:batch="http://www.springframework.org/schema/batch"
	 xmlns:p="http://www.springframework.org/schema/p"
	  xmlns:tx="http://www.springframework.org/schema/tx" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
  http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
   http://www.springframework.org/schema/batch  http://www.springframework.org/schema/batch/spring-batch-2.2.xsd
   http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
	

	<!-- ========================= GENERAL DEFINITIONS ========================= -->
	<context:property-placeholder location="classpath:*hibernate.properties,classpath:*postgres.properties,classpath:*batch-test.properties,classpath:*log4j.properties"/>
	
	 <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>
	<bean id="batchValidator" class="org.motechproject.batch.validation.BatchValidator">
	</bean>
	
	
	<bean id="jobLauncher" class="org.springframework.batch.core.launch.support.SimpleJobLauncher"
                p:jobRepository-ref="jobRepository"/>
                
    <bean id="jobOperator"
    
                class="org.springframework.batch.core.launch.support.SimpleJobOperator"
                p:jobLauncher-ref="jobLauncher" p:jobExplorer-ref="jobExplorer"
                p:jobRepository-ref="jobRepository" p:jobRegistry-ref="jobRegistry"/>

    <bean id="jobExplorer"
                class="org.springframework.batch.core.explore.support.JobExplorerFactoryBean"
                p:dataSource-ref="dataSource"/>

    <bean id="jobRegistry"
                class="org.springframework.batch.core.configuration.support.MapJobRegistry"/>

    <bean class="org.springframework.batch.core.configuration.support.JobRegistryBeanPostProcessor"
                p:jobRegistry-ref="jobRegistry"/>
	
	
	
	
	 <bean id="jobParametersIncrementer" class="org.springframework.batch.core.launch.support.RunIdIncrementer" />
	
	
	<bean id="jobService"
		class="org.motechproject.batch.service.impl.JobServiceImpl">
		<property name="jobRepo" ref="jobRepo"></property>
		<property name="jobStatusRepo" ref="jobStatusRepo"></property>
		<property name="jobParameterRepo" ref="jobParameterRepo"></property>
	</bean>
	
	<bean id="jobTriggerService"
		class="org.motechproject.batch.service.impl.JobTriggerServiceImpl">
		<property name="jobParameterRepo" ref="jobParameterRepo"></property>
		<property name="jobRepo" ref="jobRepo"></property>
	</bean>	

	<bean id="fileUploadService"
		class="org.motechproject.batch.service.impl.FileUploadServiceImpl">
		<property name="jobRepo" ref="jobRepo"></property>
	</bean>
	
	 <batch:job-repository id="jobRepository"/>
    
    <bean id="jobRepo" class="org.motechproject.batch.repository.JobRepository">
		<constructor-arg index="0" ref="sessionFactory" />
	</bean>
	 <bean id="jobParameterRepo" class="org.motechproject.batch.repository.JobParametersRepository">
		<constructor-arg index="0" ref="sessionFactory" />
	</bean>
	 <bean id="jobStatusRepo" class="org.motechproject.batch.repository.JobStatusRepository">
		<constructor-arg index="0" ref="sessionFactory" />
	</bean>
	

    <bean id="allDomainEntities"  class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="sourceList">
            <list>
                 <value>org.motechproject.batch.model.hibernate.BatchJob</value>
                 <value>org.motechproject.batch.model.hibernate.BatchJobConfigurationHistory</value>
                 <value>org.motechproject.batch.model.hibernate.BatchJobExecution</value>
                 <value>org.motechproject.batch.model.hibernate.BatchJobExecutionContext</value>
                 <value>org.motechproject.batch.model.hibernate.BatchJobExecutionParams</value>
                 <value>org.motechproject.batch.model.hibernate.BatchJobInstance</value>
                 <value>org.motechproject.batch.model.hibernate.BatchJobParameters</value>
                 <value>org.motechproject.batch.model.hibernate.BatchJobStatus</value>
                 <value>org.motechproject.batch.model.hibernate.BatchStepExecution</value>
                 <value>org.motechproject.batch.model.hibernate.BatchStepExecutionContext</value>
            </list>
        </property>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>

        <property name="annotatedClasses" ref="allDomainEntities"/>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
                <prop key="hibernate.format_sql">${hibernate.format_sql}</prop>
                <prop key="hibernate.default_schema">${hibernate.default_schema}</prop>
            </props>
        </property>
    </bean>

    <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>
</beans>
