<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>motech</artifactId>
		<groupId>org.motechproject</groupId>
		<version>0.24-SNAPSHOT</version>
		<relativePath>../../../</relativePath>
	</parent>

	<artifactId>motech-platform-hub</artifactId>
	<groupId>org.motechproject</groupId>
	<version>0.24-SNAPSHOT</version>
	<name>MOTECH Hub</name>
	<description>MOTECH Hub</description>
	<packaging>war</packaging>

	<properties>
		<modules.root.dir>${basedir}/../../..</modules.root.dir>
	</properties>

	<build>
		<finalName>motech-platform-hub</finalName>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
			</plugin>

			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>2.3.4</version>
				<extensions>true</extensions>
				<configuration>
					<instructions>
						<Blueprint-Enabled>true</Blueprint-Enabled>
						<Context-Path>hub</Context-Path>
						<Resource-Path>hub/resources</Resource-Path>
						<Export-Package>
							org.motechproject.hub;version=${project.version},
						</Export-Package>
						<Import-Package>
							org.springframework.http,
							org.springframework.stereotype,
							org.springframework.web.bind.annotation,
							javax.annotation,
							org.apache.commons.io,
							org.joda.time,
							<!--org.motechproject.commons.date.util, org.motechproject.event.metrics, -->
							org.slf4j,
							org.springframework.beans.factory.annotation

						</Import-Package>
					</instructions>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-bundles</id>
						<phase>package</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${user.home}/.motech/bundles</outputDirectory>
							<resources>
								<resource>
									<directory>target</directory>
									<includes>
										<include>*.jar</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<webXml>${project.basedir}/src/main/webapp/WEB-INF/web.xml</webXml>
					<webappDirectory>C:\Servers\apache-tomcat-7.0.52-motech-platform-hub\webapps\motech-platform-hub</webappDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<verbose>true</verbose>
					<fork>true</fork>
					<executable></executable>
					<compilerVersion>1.6</compilerVersion>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
